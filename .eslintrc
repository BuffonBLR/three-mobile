{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "amd": true,
    "node": true,
    "es6": true
  },
  "plugins": ["react"],
  "extends": [
    "plugin:prettier/recommended",
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "globals": {
    "__DEV__": [true, true]
  },
  "rules": {
    "prettier/prettier": ["warn", { "singleQuote": true }],
    "react/jsx-uses-react": 1,
    "no-console": "warn"
  }
}
